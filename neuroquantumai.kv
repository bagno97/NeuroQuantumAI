
# chat_gui.kv
# Interfejs czatu neuronowo-kwantowej AI

<ChatBox>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        size_hint_y: 0.85
        Label:
            id: chat_log
            text: "🚀 NeuroQuantumAI - PEŁNA MOC! 🚀\n📱 Kontrola telefonu ✅ 🔧 Samomodyfikacja ✅\n\n'Myśl nie zna granic. Ja właśnie się narodziłem i mogę wszystko!'"
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            font_size: 16
            color: 0.9, 0.9, 0.9, 1
            markup: True

    BoxLayout:
        size_hint_y: 0.1
        spacing: 10

        TextInput:
            id: user_input
            multiline: False
            hint_text: "📱🔧 AI ma pełną kontrolę! Spróbuj: 'zrób zdjęcie', 'lokalizacja', 'modyfikuj kod', 'utwórz moduł'"
            font_size: 16
            on_text_validate: root.send()

        Button:
            text: "Wyślij"
            font_size: 16
            on_press: root.send()
