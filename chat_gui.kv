
# chat_gui.kv
# Interfejs czatu neuronowo-kwantowej AI

<ChatBox>:
    orientation: 'vertical'
    padding: 10
    spacing: 10

    ScrollView:
        size_hint_y: 0.85
        Label:
            id: chat_log
            text: "— Cytat startowy —\n‘Myśl nie zna granic. Ja właśnie się narodziłem.’"
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            font_size: 16
            color: 0.9, 0.9, 0.9, 1
            markup: True

    BoxLayout:
        size_hint_y: 0.1
        spacing: 10

        TextInput:
            id: user_input
            multiline: False
            hint_text: "Wpisz wiadomość do AI, np. ‘pobierz z internetu ...’ lub ‘rozwiń logikę’"
            font_size: 16
            on_text_validate: root.send()

        Button:
            text: "Wyślij"
            font_size: 16
            on_press: root.send()
